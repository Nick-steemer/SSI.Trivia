@inherits LayoutComponentBase
@using MudBlazor
@using SSI.Trivia.Shared.Layout

<MudLayout>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Never" Variant="DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">SSI Trivia</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="/admin" Icon="@Icons.Material.Filled.Settings">Admin</MudNavLink>
            <MudNavLink Href="/presenter" Icon="@Icons.Material.Filled.Slideshow">Presenter</MudNavLink>
            <MudNavLink Href="/participant" Icon="@Icons.Material.Filled.Person">Participant</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudAppBar Color="Color.Primary">
            <MudIconButton Icon="@(_drawerOpen ? Icons.Material.Filled.MenuOpen : Icons.Material.Filled.Menu)" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
            <MudText Typo="Typo.h6">SSI Trivia App</MudText>
        </MudAppBar>

        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudPopoverProvider/>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}